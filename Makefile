rm_submod:
# 清空模块目录
	@-git submodule deinit -f ${MOD_NAME}
# 删除.gitmodules中的模块信息
	@-git rm -r --cached ${MOD_NAME}
# 清理.gitmodules!!!

rm:
# 删除目录
	@-rm -rf ${MOD_NAME}
	@-rm -rf .git/modules/${MOD_NAME}
	@sed -i "\#${MOD_NAME}#,+3d" .gitmodules
